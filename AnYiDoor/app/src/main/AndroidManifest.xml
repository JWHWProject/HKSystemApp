<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.anyi.door">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <!-- 调用相机权限 -->
    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>
    <!-- 读写SD卡权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:name="cn.nj.www.my_module.main.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.zzti.fengyongge.imagepicker.PhotoSelectorActivity"/>
        <activity android:name="com.zzti.fengyongge.imagepicker.PhotoPreviewActivity"/>
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name=".RegistSetPasswordActy"
            android:launchMode="singleTask"/>
        <activity android:name=".EmptyActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".video.base.TinyWindowPlayActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="singleTask">

        </activity>
        <activity
            android:name=".LoginActy"
            android:launchMode="singleTask">

        </activity>
        <activity
            android:name=".GiveCardActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden|stateUnchanged">
        </activity>
        <activity
            android:name=".FindPasswordCodeActy"
            android:launchMode="singleTask"/>
        <activity
            android:name=".GiveBackCardActivity"
            android:launchMode="singleTask">
        </activity>
        <activity android:name=".SearchTrainListActy"/>
        <activity android:name=".OuterGetReasonActivity"/>
        <activity
            android:name=".TrainListActy"
            android:launchMode="singleTask">
        </activity>
        <!--发布时要用这个-->
        <activity android:name=".WelcomeAndJudgeActivity">
        </activity>
        <activity android:name=".TrainPicActivity"/>
        <activity android:name=".TrainVideoActivity"/>
    </application>

</manifest>
