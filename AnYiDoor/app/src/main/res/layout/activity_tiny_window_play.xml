<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>
    <SurfaceView
        android:id="@+id/camera_surfaceview"
        android:layout_width="0.1dp"
        android:layout_height="0.1dp" />
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="45dp">

       <LinearLayout
           android:id="@+id/top_view_close_ll"
           android:layout_width="45dp"
           android:layout_height="match_parent"
           android:gravity="center_vertical"
           android:orientation="horizontal">

           <ImageView
               android:id="@+id/top_view_close_iv"
               android:layout_width="@dimen/pxtodp30"
               android:layout_height="wrap_content"
               android:src="@mipmap/app_title_back"
               android:layout_marginLeft="12dp" />
       </LinearLayout>
       <TextView
           android:id="@+id/top_view_title_tv"
           android:layout_width="wrap_content"
           android:layout_height="@dimen/pxtodp90"
           android:layout_centerInParent="true"
           android:gravity="center"
           android:textColor="@color/register_black_text"
           android:textSize="17sp" />
   </RelativeLayout>

    <com.xiao.nicevideoplayer.NiceVideoPlayer
        android:id="@+id/nice_video_player"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"/>


    <Button
        android:id="@+id/app_finish_bn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pxtodp90"
        android:layout_marginLeft="@dimen/pxtodp30"
        android:layout_marginRight="@dimen/pxtodp30"
        android:layout_marginTop="@dimen/pxtodp54"
        android:background="@drawable/common_pink_bn"
        android:text="完成培训"
        android:textColor="@color/white_color"
        android:textSize="@dimen/pxtosp34"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <ImageView
            android:id="@+id/iv_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/iv_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/iv_img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</LinearLayout>
