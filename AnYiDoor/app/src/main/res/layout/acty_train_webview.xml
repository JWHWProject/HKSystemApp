<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_add_friend_dialog_bg"
                android:orientation="vertical">

    <include
        android:id="@+id/common_back"
        layout="@layout/layout_top"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pxtodp1"
        android:layout_below="@+id/common_back"
        android:background="@color/line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/line"
        android:layout_above="@+id/bn_finish"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/common_web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <Button
        android:id="@+id/bn_finish"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pxtodp90"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/pxtodp40"
        android:layout_marginLeft="@dimen/pxtodp30"
        android:layout_marginRight="@dimen/pxtodp30"
        android:layout_marginTop="@dimen/pxtodp40"
        android:background="@drawable/common_pink_bn"
        android:text="@string/finish_train"
        android:enabled="false"
        android:textColor="@color/white_color"
        android:textSize="@dimen/pxtosp34"/>
    <SurfaceView
        android:id="@+id/camera_surfaceview"
        android:layout_width="0.1dp"
        android:layout_height="0.1dp" />
</RelativeLayout>
