<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="@dimen/pxtodp20">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/pxtodp40"
        android:paddingTop="@dimen/pxtodp30"
        android:text="题目"
        android:textColor="@color/register_black_text"
        android:textSize="@dimen/pxtodp30"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/pxtodp24"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/cb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选项1"
            android:textColor="@color/register_black_text"
            android:textSize="@dimen/pxtodp30"/>

        <CheckBox
            android:id="@+id/cb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选项2"
            android:textColor="@color/register_black_text"
            android:textSize="@dimen/pxtodp30"/>

        <CheckBox
            android:id="@+id/cb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选项3"
            android:textColor="@color/register_black_text"
            android:textSize="@dimen/pxtodp30"/>

        <CheckBox
            android:id="@+id/cb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选项4"
            android:textColor="@color/register_black_text"
            android:textSize="@dimen/pxtodp30"/>

        <CheckBox
            android:id="@+id/cb5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选项5"
            android:textColor="@color/register_black_text"
            android:textSize="@dimen/pxtodp30"/>

    </LinearLayout>

</LinearLayout>
