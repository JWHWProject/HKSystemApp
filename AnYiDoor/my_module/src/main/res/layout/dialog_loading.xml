<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@mipmap/loading_black_bg"
        android:padding="@dimen/pxtodp50">

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/pxtodp70"
            android:layout_height="@dimen/pxtodp70"
            android:indeterminateDrawable="@drawable/loading_progress_img" />
        <TextView
            android:layout_below="@+id/progressBar1"
            android:layout_marginTop="@dimen/pxtodp20"
            android:layout_width="wrap_content"
            android:text="提交中,请稍后"
            android:id="@+id/tvTip"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="@dimen/pxtodp24"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


</RelativeLayout>